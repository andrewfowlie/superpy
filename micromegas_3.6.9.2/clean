:
  echo "Remove all generated files? (Y/N)"
  read answer
  if(test  $answer = Y -o $answer = y  ) then
    echo OK!
  else
    echo cleaning is refused!
    exit 1
  fi 

  if(test -x "`which gmake`") then
     MAKE=gmake
  else
     MAKE=make
  fi
  export MAKE

  for Dir in * Packages/*
  do 
    if(test -d $Dir  -a $Dir != Packages ) then 
       echo clean $Dir
       $MAKE -C $Dir clean
    fi
  done

  
  
  exit 0
